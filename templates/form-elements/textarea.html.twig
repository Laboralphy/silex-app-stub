{% set idx = id | default('') %}
{% if idx == '' %}{% set idx = uniqid() %}{% endif %}
<div class="row field-element">
    <div class="col lg-12"><label for="{{ idx }}">{{ label }}</label></div>
    <div class="col lg-12">
        <textarea id="{{ idx }}" name="{{ name }}" rows="{{ height | default('6') }}">{% if value | default(false) %}{{ value }}{% endif %}</textarea>
    </div>
</div>
